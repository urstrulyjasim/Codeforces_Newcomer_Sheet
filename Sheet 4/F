#include<stdio.h>
#include<string.h>
int main(){

    int N;
    scanf("%d",&N);
    char s1[101];
    while(N--)
    {
        scanf("%s",&s1);
        int l = strlen(s1);
        if(l<=10)
        {
            printf("%s\n",s1);
        }
        else 
            printf("%c%d%c\n",s1[0],l-2,s1[l-1]);
    }
    return 0;
}

